<!DOCTYPE html>

<!-- ATTENDANT -->

<html lang="pt-br">

    <head>
        <%- include('partials/head'); %>
        <title> HealthTrack: Cadastrar Paciente</title>
    </head>

    <body>

        <%- include('partials/header', {initials}); %>

        <nav class="nav-primary">
            <% const currentPage = 'register-patient'; %>
            <%- include('partials/attendant-sidebar', {currentPage}); %>
        </nav>

        <div class="main-content">
            <b class="main-title">Cadastrar Paciente</b>
            <form action="/register-patient" method="post">
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputName">Nome Completo <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputName" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputLastName">Data de Nascimento <span class="required-color">*</span></label>
                        <input autocomplete="off" type="date" class="form-control" name="inputLastName" required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputCPF">CPF <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputCPF" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputRG">RG <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputRG" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputEmail">E-mail <span class="required-color">*</span></label>
                        <input autocomplete="off" type="email" class="form-control" name="inputEmail" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputCellphone">Celular<span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputCellphone" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-button">
                    <button type="submit" class="btn btn-primary background-dark-green">Cadastrar</button>
                </div>
              </form>
        </div>

    </body>

</html>