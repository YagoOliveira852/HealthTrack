<!DOCTYPE html>

<html lang="pt-br">

    <head>
        <%- include('partials/head'); %>
        <title> HealthTrack: Editar Consultas</title>
    </head>

    <body>

        <%- include('partials/header', {initials}); %>

        <div class="flash-container">
            <div class="flash-message"></div>
        </div>

        <nav class="nav-primary">
            <% const currentPage = 'edit-record'; %>
            <%- include('partials/edit-record-sidebar', {currentPage}); %>
        </nav>

        <div class="main-content">
            <b class="main-title">Informações do Usuário</b>
            <form action="/edit-record" method="post">
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputName">Nome Completo <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputName" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputLastName">Data de Nascimento <span class="required-color">*</span></label>
                        <input autocomplete="off" type="date" class="form-control" name="inputLastName" required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputCPF">CPF <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputCPF" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputRG">RG <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputRG" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputEmail">E-mail <span class="required-color">*</span></label>
                        <input autocomplete="off" type="email" class="form-control" name="inputEmail" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputCellphone">Celular<span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputCellphone" placeholder="Digite aqui..." required>
                    </div>
                </div>
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputEmail">Adicionar Descrição<span class="required-color">*</span></label>
                        <textarea autocomplete="off" class="form-control no-resize" name="inputDescription" placeholder="Digite aqui.." rows="5"></textarea>
                    </div>
                </div>
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="selectRisk">Grau de Risco<span class="required-color">*</span></label>
                        <select class="form-select" name="selectRisk" aria-label="Default select example">
                            <option selected>Classifique o grau de Risco</option>
                            <option class="risk1" value="1">Risco 1</option>
                            <option class="risk2" value="2">Risco 2</option>
                            <option class="risk3" value="3">Risco 3</option>
                            <option class="risk4" value="4">Risco 4</option>
                            <option class="risk5" value="5">Risco 5</option>
                          </select>
                    </div>
                </div>

                <div class="form-button">
                    <button type="submit" class="btn btn-primary btn-dark-green">Salvar</button>
                </div>
            </form>
        </div>
    </body>
</html>