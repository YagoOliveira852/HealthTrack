<!DOCTYPE html>

<html lang="pt-br">

    <head>
        <%- include('partials/head'); %>
        <title> HealthTrack: Registrar Usuário</title>
    </head>

    <body>

        <%- include('partials/header', {initials}); %>

        <nav class="nav-primary">
            <% const currentPage = 'register-user'; %>
            <%- include('partials/admin-sidebar', {currentPage}); %>
        </nav>

        <div class="flash-container">
            <div class="flash-message"></div>
        </div>

        <div class="main-content">
            <b class="main-title">Registrar Usuário</b>
            <form action="/register-user" method="post">
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputName">Nome <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputName" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputLastName">Sobrenome <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputLastName" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputUsername">Nome de Usuário <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputUsername" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputEmail">E-mail <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputEmail" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputUserPassword">Senha Padrão do Usuário <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputUserPassword" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputAdminPassword">Senha do Administrador<span class="required-color">*</span></label>
                        <input autocomplete="off" type="password" class="form-control" name="inputAdminPassword" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="selectRole">Cargo<span class="required-color">*</span></label>
                        <select class="form-select" name="selectRole" aria-label="Default select example">
                            <option selected class="attendant" value="0">Atendente</option>
                            <option class="riskClassificator" value="1">Classificador de Risco</option>
                            <option class="doctor" value="2">Médico</option>
                            <option class="admin" value="3">Administrador</option>
                          </select>
                    </div>
                </div>

                <div class="form-button">
                    <button type="submit" class="btn btn-primary background-dark-green">Cadastrar</button>
                </div>
              </form>
        </div>

    </body>

</html>