<!DOCTYPE html>

<html lang="pt-br">

    <head>
        <%- include('partials/head'); %>
        <title> HealthTrack: Editar Consultas</title>
    </head>

    <body>

        <%- include('partials/header', {initials}); %>

        <div class="flash-container">
            <div class="flash-message"></div>
        </div>

        <nav class="nav-primary">
            <% const currentPage = 'edit-record-doctor'; %>
            <%- include('partials/doctor-sidebar', {currentPage}); %>
        </nav>

        <div class="main-content">
            <b class="main-title">Informações do Paciente</b>
            <form action="/edit-record-doctor" method="post">
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputName">Nome Completo <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputName" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputLastName">Data de Nascimento <span class="required-color">*</span></label>
                        <input autocomplete="off" type="date" class="form-control" name="inputLastName" required>
                    </div>
                </div>
                <b class="main-title">Dados do Paciente</b>
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputPressure">Pressão Arterial <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" name="inputPressure" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputTemperature">Temperatura Corporal<span class="required-color">*</span></label>
                        <input autocomplete="off" type="password" class="form-control" name="inputTemperature" placeholder="Digite aqui..." required>
                    </div>
                </div>
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputDescription">Descrição<span class="required-color">*</span></label>
                        <textarea autocomplete="off" class="form-control no-resize" name="inputDescription" placeholder="Digite aqui.." rows="5"></textarea>
                    </div>
                </div>
                <div class="form-button">
                    <button type="submit" class="btn btn-primary btn-dark-green">Salvar</button>
                </div>
              </form>


        </div>

    </body>

</html>