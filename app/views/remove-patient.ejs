<!DOCTYPE html>

<html lang="pt-br">

    <head>
        <%- include('partials/head'); %>
        <title> HealthTrack: Remover Paciente</title>
    </head>

    <body>

        <%- include('partials/header', {initials}); %>

        <%- include('partials/flash-container'); %>

        <nav class="nav-primary">
            <% const currentPage = 'remove-patient'; %>
            <%- include('partials/admin-sidebar', {currentPage}); %>
        </nav>

        <div class="main-content">
            <b class="main-title">Remover Paciente</b>
            <form action="/remove-patient" method="post">
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputCPF">CPF <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" minlength="11" maxlength="11" pattern="^[0-9]+$" title="Somente nÃºmeros e de tamanho 11 - exemplo: 12345678900" class="form-control" name="inputCPF" placeholder="Digite aqui..." required>
                    </div>

                    <div class="col">
                        <label for="inputAdminPassword">Senha do Administrador <span class="required-color">*</span></label>
                        <input autocomplete="off" type="password" class="form-control" name="inputAdminPassword" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-button">
                    <button type="submit" class="btn btn-primary btn-dark-green">Remover</button>
                </div>

            </form>
        </div>

    </body>

</html>