<!DOCTYPE html>

<html lang="pt-br">

    <head>
        <%- include('partials/head'); %>
        <title> HealthTrack: Login</title>
    </head>

    <body class="background-light-green">

        <%- include('partials/header'); %>

        <%- include('partials/flash-container'); %>

        <div class="wrapper">
            <div class="login-box rounded">
                <div class="logo-container">
                    <a class="navbar-brand logo-login" href="/">
                        <b>
                            <span class="color-light-green">HEALTH</span>
                            <span class="color-dark-green">TRACK</span>
                        </b>
                    </a>
                </div>

                <form action="/login" method="post">
                    <div class="form-floating mb-3">
                        <input autocomplete="off" autofocus class="form-control" type="text" name="inputUsername" required>
                        <label for="inputUsername">Nome de Usu√°rio</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input autocomplete="off" class="form-control" type="password" name="inputPassword" required>
                        <label for="inputPassword">Senha</label>
                    </div>

                    <div class="form-button">
                        <button type="submit" class="btn btn-primary btn-dark-green">Entrar</button>
                    </div>
                </form>
            </div>
        </div>

    </body>

</html>