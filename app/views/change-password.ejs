<!DOCTYPE html>

<html lang="pt-br" >

    <head>
        <%- include('partials/head'); %>
        <title> HealthTrack: Alterar Senha</title>
    </head>

    <body>

        <%- include('partials/header', {initials}); %>

        <%- include('partials/flash-container'); %>
    
    
        <nav class="nav-primary">
            <% const currentPage = 'change-password'; %>
            <%- include('partials/change-password-sidebar', {currentPage}); %>
        </nav>

      <div class="main-content">
        <b class="main-title">Alterar Senha</b>
        <form action="/change-password" method="post">
          <div class="form-group form-content row">
            <div class="col">
              <label for="inputPassword">Senha Atual <span class="required-color">*</span></label>
              <input autocomplete="off" type="password" class="form-control" name="inputPassword" placeholder="Digite aqui..." required>
            </div>
          </div>

          <div class="form-group form-content row">
            <div class="col">
              <label for="inputNewPassword">Nova Senha <span class="required-color">*</span></label>
              <input autocomplete="off" type="password" class="form-control" name="inputNewPassword" placeholder="Digite aqui..." required>
            </div>
            <div class="col">
              <label for="inputNewPasswordConfirmation">Nova Senha Confirmação <span class="required-color">*</span></label>
              <input autocomplete="off" type="password" class="form-control" name="inputNewPasswordConfirmation" placeholder="Digite aqui..." required>
            </div>
          </div>

          <div class="form-button">
              <button type="submit" class="btn btn-primary background-dark-green">Salvar</button>
          </div>
        </form>
      </div>
              
    </body>

</html>